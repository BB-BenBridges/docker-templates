<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Privileged>false</Privileged>
  <Beta>False</Beta>
  <Category>Backup: Tools:</Category>
  <Name>steamcache</Name>
  <Description>This docker container provides a depot-caching proxy server for Steam content. For any network with more than one PC gamer connected, this will drastically reduce internet bandwidth consumption.[br][br]
    [b]Please use the instructions [here](https://forums.lime-technology.com/topic/54183-support-cheesemarathons-repo/?do=findComment&comment=590728) to install this container![/b]
  </Description>
  <Overview/>
  <Support>http://lime-technology.com/forum/index.php?topic=55931.0</Support>
  <Registry>https://hub.docker.com/r/steamcache/steamcache/</Registry>
  <GitHub>https://steamcache.github.io/</GitHub>
  <Repository>steamcache/steamcache:latest</Repository>
  <Network>bridge</Network>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>80</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment/>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/steamcache/</HostDir>
      <ContainerDir>/data/cache</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI/>
  <Icon>https://raw.githubusercontent.com/cheesemarathon/docker-templates/master/images/steamcache.png</Icon>
  <Config Name="Web Port" Target="80" Default="" Mode="tcp" Description="Container Port: 80" Type="Port" Display="advanced" Required="true" Mask="false">80</Config>
  <Config Name="Steam cache location" Target="/data/cache" Default="" Mode="rw" Description="Cached data location" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/steamcache/</Config>
</Container>
